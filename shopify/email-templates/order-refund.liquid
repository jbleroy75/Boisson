                  </tr>
                  <tr>
                    <td style="padding: 12px 0; border-bottom: 1px solid #EEEEEE; color: #666666; font-size: 14px;">Date du remboursement</td>
                    <td style="padding: 12px 0; border-bottom: 1px solid #EEEEEE; text-align: right; font-size: 14px; color: #1A1A1A;">{{ 'now' | date: "%d/%m/%Y" }}</td>
                  </tr>
                  <tr>
                    <td style="padding: 12px 0; color: #666666; font-size: 14px;">Moyen de paiement</td>
                    <td style="padding: 12px 0; text-align: right; font-size: 14px; color: #1A1A1A;">
                      {% for transaction in refund.transactions %}
                        {{ transaction.gateway_display_name }}
                      {% endfor %}
                    </td>
                  </tr>
                </table>
              </div>

              <!-- Refunded Items -->
              {% if refund.refund_line_items.size > 0 %}
              <div style="margin-bottom: 32px;">
                <h3 style="font-size: 14px; color: #1A1A1A; margin: 0 0 16px; text-transform: uppercase; letter-spacing: 1px;">
                  üì¶ Articles rembours√©s
                </h3>
                <div style="background-color: #FAFAFA; border-radius: 12px; padding: 20px;">
                  {% for line_item in refund.refund_line_items %}
                  <div style="{% unless forloop.last %}border-bottom: 1px solid #EEEEEE; padding-bottom: 12px; margin-bottom: 12px;{% endunless %}">
                    <p style="margin: 0 0 4px; font-size: 15px; font-weight: 600; color: #1A1A1A;">
                      {{ line_item.line_item.title }}
                    </p>
